<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../includes/head') %>
    <title>Creando un Producto</title>
    <% styles.forEach(style => { %>
        <link rel="stylesheet" href="/css/<%= style %> ">
    <% }) %>
    <link rel="stylesheet" href="/css/products/productForm.css">
</head>
<body>
    <%- include('../includes/header') %> 
    <main>
        <section id="content-container">
            <h1>Opciones</h1>
            <section id="buttons-container">
                <button class="option-button button-color-off" id="create-btn" data-number="1">
                    Agregar
                </button>
                <button class="option-button button-color-off" id="edit-btn" data-number="2">
                    Editar
                </button>
                <button class="option-button button-color-off" id="delete-btn" data-number="3">
                    Borrar
                </button>
            </section>
            <section id="create-links">
                <a href="/products/create" class="btn-a-link" id="btn-a-link-product">
                    <button class="link-button">
                    Producto
                    </button>
                </a>
                <a href="/products/create/brand" class="btn-a-link" id="btn-a-link-brand">
                    <button class="link-button">
                        Marca
                    </button>
                </a>
                <a href="/products/create/category" class="btn-a-link" id="btn-a-link-category">
                    <button class="link-button">
                        Categoría
                    </button>
                </a>
                <a href="/products/create/color" class="btn-a-link" id="btn-a-link-color">
                    <button class="link-button">
                        Color
                    </button>
                </a>
            </section>
            <section id="edit-links">
                <button class="link-button">
                    Producto
                </button>
                <button class="link-button">
                        Marca
                </button>
                <button class="link-button">
                        Categoría
                </button>

                <button class="link-button">
                        Color
                </button>
            </section>
            <section class="form-container">
                <form action="/products/options/edit/product" method="POST">
                    <select name="product" id="product" class='product-info'>
                        <% for(i = 0; i < products.length; i++ ) { %>
                            <option value="<%=products[i].id%>"><%=products[i].name%></option>
                        <% } %>
                    </select>
                    <button type="submit" class="btn-submit">Editar</button>
                </form>
            </section>
        </section>
    </main>
        <%-include('../includes/footer') %>  
    <script src="/js/adminOptions.js"></script>
</body>
</html>