<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../includes/head') %>
    <title>Creando un Producto</title>
    <% styles.forEach(style => { %>
        <link rel="stylesheet" href="/css/<%= style %> ">
    <% }) %>
    <link rel="stylesheet" href="/css/products/productForm.css">
</head>
<body>
    <!-- HEADER -->
    <%- include('../includes/header') %> 
    <main>
        <!-- MENU DE NAVEGACIÃ“N -->
        <%- include('../includes/nav') %> 

        <!-- CUERPO -->
        <section id="content-container">
            <h1>Seleccione la categoria a editar</h1>
            <form action="/products/redirect" method="POST">
                <fieldset>
                    <select name="category" id="category" class = "product-info">
                        <% for( let i = 0; i < categories.length; i++ ) { %>
                            <option value="<%=categories[i].id%>"><%=categories[i].name%></option>
                        <% } %>
                    </select>
                    <button type="submit" id="button-submit">Editar</button>
                </fieldset>
            </form>
    </section>
    </main>
    <%-include('../includes/footer') %>  
    <script src="/js/nav.js"></script>
    <script src="/js/home.js"></script>
</body>
</html>