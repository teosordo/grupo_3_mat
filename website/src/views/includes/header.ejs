<header>
    <!--Menu de navegacion-->
    <i class="fas fa-bars burger"></i>
    <a href="/" class="logo"><img src="/imgs/logo_final.svg" alt="logo"></a> 
    <!--Buscador-->
    <form id="buscador" method="GET" action="/products/list/1">
        <input type="search" name="searchbar" placeholder="Buscar..." id="searchbar">
        <button type="submit" name="buscar" class="buscar"><i class="fas fa-search"></i></button>
    </form>
    <!--Carrito de compras-->
    <nav id="header-right">
        <% if(user){ %> 
            <a href="/users/cart" id="cart"><i class="fas fa-shopping-cart"></i></a>
        <% } %> 
        <section>
            <% if(user){%>
                <a href="/users/profile" id="user-login">
                    <figure id="avatar-cont">
                        <img id="avatar" src="/uploads/users/<%= user.avatar%>" alt="avatar">
                    </figure>
                </a>
            <% } else { %> 
                <a href="/users/login" id="user-login">
                    <i id="login" class="far fa-user-circle"></i>
                    <p id="usuario">Iniciar Sesi√≥n</p>
                </a>
            <% } %> 
        </section>
    </nav>
</header>