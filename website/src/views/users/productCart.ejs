<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../includes/head')%>
    <% styles.forEach(style => { %>
        <link rel="stylesheet" href="/css/<%= style %> ">
    <% }) %>
    <link rel="stylesheet" href="/css/users/productCart.css">

    <title>Carrito de compras</title>
</head>
<body>
    <!-- HEADER -->
    <%- include('../includes/header')  %> 

    <main>
        <!-- CUERPO -->
        <section id="contenido">
            <section id="title">
                <h2 id="selected">Carrito</h2>
                <h2>Favoritos</h2>
            </section>

            <article id="products-container">
                <% for(let i = 0; i < products.cart_products.length; i++){ %> 
                    <section>
                        <section class="product"> 
                            <figure><img src="/uploads/products/<%= products.cart_products[i].products.images[0].name %> " alt="foto_producto"></figure>
                            <h3><a href="/products/detail/<%= products.cart_products[i].products.id %> "><%= products.cart_products[i].products.name %> </a></h3>
                            <form action="/" method="POST" required>
                                <p>Cantidad: <%= products.cart_products[i].products_amount%></p>
                            </form>
                            <p>$<%= products.cart_products[i].products.price %></p>
                        </section>
                    </section>
                <% } %> 
            </article>

            <article id="units-total">
                <h3>Unidades: <%= products.amount%></h3>

                <h3>Total: $<%= products.final_price %> </h3>
            </article>

            <button id="buy-button">Realizar pedido</button>
        </section>
    </main>
    <!-- FOOTER -->
    <%- include('../includes/footer')  %> 
</body>
</html>