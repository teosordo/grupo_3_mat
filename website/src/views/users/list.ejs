<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../includes/head')%>
    <% styles.forEach(style => { %>
        <link rel="stylesheet" href="/css/<%= style %> ">
    <% }) %>
    <link rel="stylesheet" href="/css/users/userList.css">
    <title>Lista de Usuarios</title>
</head>
<body>
    <%- include('../includes/header') %>
    <main>
        <section id="contenido">
            <% for(i = 0;i < user.length;i++) { %>
            <a href="/users/edit/<%=user[i].id%>">
                <article class="container-user">
                    <figure class="container-img-user">
                        <img src="/uploads/users/<%= user[i].avatar%>" alt="" class="img-user">
                    </figure>
                    <section class="user-info">
                        <h2><%= user[i].username%></h2>
                        <h3>Nombre Completo: <%= user[i].firstName + ' ' + user[i].lastName %></h3>
                    </section>
                </article>
            </a>
            <% } %>
        </section>
    </main>
    <%-include('../includes/footer') %> 
</body>
</html>